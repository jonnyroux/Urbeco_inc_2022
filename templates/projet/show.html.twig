{% extends 'base.html.twig' %}

{% block title %}Projet{% endblock %}

{% block body %}
    <h1>Nos Projets</h1>

    <div id="demo" class="carousel slide"  data-interval="5000">

   
  <!-- The slideshow -->
  <div class="carousel-inner">
   {% for image in projet.image %}
    <div class="carousel-item ">
    <img src="{{ asset('images/images_produit/'~image.nom) }}"  alt="Los Angeles" width="600" height="400">
    </div>
    {% endfor %}     
  </div>
  
  <!-- Left and right controls -->
  <a class="carousel-control-prev" href="#demo" data-slide="prev">
    <span class="carousel-control-prev-icon"></span>
  </a>
  <a class="carousel-control-next" href="#demo" data-slide="next">
    <span class="carousel-control-next-icon"></span>
  </a>
</div>
 <div  class="this">
            <div class="text">
                <h1  id="product_title">{{ projet.titre }}</h1>
                <p id="projet_descript">{{ projet.description }}</p>
                
            </div>
 
{% endblock %}
